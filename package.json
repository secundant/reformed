{
  "name": "reformed",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/secundant/reformed",
  "repository": {
    "type": "git",
    "url": "https://github.com/secundant/reformed"
  },
  "author": {
    "name": "Dmitry Remezov",
    "url": "https://github.com/secundant"
  },
  "keywords": [
    "effector",
    "typescript",
    "forms",
    "react",
    "form",
    "form-validation"
  ],
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=3.2.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@3.3.0",
  "workspaces": [
    "apps/*",
    "libs/*",
    "tools/*"
  ],
  "scripts": {
    "check-install": "yarn dlx @yarnpkg/doctor .",
    "postinstall": "is-ci || yarn husky install",
    "release-version": "yarn changeset version && yarn nx format:write",
    "release-publish": "yarn nx affected:build && yarn changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@types/node": "18.11.18",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lint-staged": "13.1.0",
    "nx": "15.4.8",
    "prettier": "2.8.2",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vite-tsconfig-paths": "4.0.3"
  }
}
